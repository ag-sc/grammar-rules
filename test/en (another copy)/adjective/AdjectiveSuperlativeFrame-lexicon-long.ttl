@prefix :        <http://localhost:8080/#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .
@prefix oils:     <http://lemon-model.net/oils#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :long ;
  lemon:entry    :form_long_preposition ;
  lemon:entry    :long_res .

:long a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:adjective ;
  lemon:canonicalForm  :form_long ;
  lemon:otherForm      :form_long_comperative ;
  lemon:otherForm      :form_long_superlative ;
  lemon:sense          :long_sense_1 ;
  lemon:synBehavior    :long_predFrame .

:form_long lemon:writtenRep "long"@en .

:form_long_comperative lemon:writtenRep "longer"@en .

:form_long_superlative lemon:writtenRep "longest"@en .

:long_predFrame a        lexinfo:AdjectiveSuperlativeFrame ;
  lexinfo:copulativeSubject :long_PredSynArg .

:long_sense_1 a  lemon:LexicalSense ;
  lemon:reference :long_res ;
  lemon:isA       :long_PredSynArg ;
  lemon:condition :long_sense_1_condition .

:long_res a   oils:CovariantScalar ;
  oils:boundTo  <http://dbpedia.org/ontology/length> ;
  oils:degree   <http://lemon-model.net/oils/high> .

:long_sense_1_condition a lemon:condition ;
  lemon:propertyDomain   <http://dbpedia.org/ontology/Country> ;
  lemon:propertyRange    <http://dbpedia.org/ontology/BodyOfWater> .## Prepositions ##
:form_long_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "in"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

