@prefix :        <http://localhost:8080/#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .
@prefix oils:     <http://lemon-model.net/oils#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :short ;
  lemon:entry    :form_short_preposition ;
  lemon:entry    :short_res .

:short a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:adjective ;
  lemon:canonicalForm  :form_short ;
  lemon:otherForm      :form_short_comperative ;
  lemon:otherForm      :form_short_superlative ;
  lemon:sense          :short_sense_1 ;
  lemon:synBehavior    :short_predFrame .

:form_short lemon:writtenRep "short"@en .

:form_short_comperative lemon:writtenRep "shorter"@en .

:form_short_superlative lemon:writtenRep "shortest"@en .

:short_predFrame a        lexinfo:AdjectiveSuperlativeFrame ;
  lexinfo:copulativeSubject :short_PredSynArg .

:short_sense_1 a  lemon:LexicalSense ;
  lemon:reference :short_res ;
  lemon:isA       :short_PredSynArg ;
  lemon:condition :short_sense_1_condition .

:short_res a   oils:CovariantScalar ;
  oils:boundTo  <http://dbpedia.org/ontology/length> ;
  oils:degree   <http://lemon-model.net/oils/low> .

:short_sense_1_condition a lemon:condition ;
  lemon:propertyDomain   <http://dbpedia.org/ontology/Country> ;
  lemon:propertyRange    <http://dbpedia.org/ontology/BodyOfWater> .## Prepositions ##
:form_short_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "in"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

